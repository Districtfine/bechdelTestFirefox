{
  "manifest_version": 2,

  "name": "Bechdel Test IMDb",
  "description": "This extension shows if a movie passes or fails the Bechdel test based on its score on bechdeltest.com",
  "version": "1.0",

  "icons":{
		"48": "icon.png"
	},

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["*://imdb.com/title/*"],
      "scripts": ["content.js"]
    }
  ],
  
  "permissions": [
    "activeTab",
    "webRequest",
    "http://bechdeltest.com/*"
  ]
}
