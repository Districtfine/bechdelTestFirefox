{
  "manifest_version": 2,

  "name": "Bechdel Test IMDb",
  "description": "This extension shows if a movie passes or fails the Bechdel test based on its score on bechdeltest.com",
  "version": "1.0",

  "icons":{
		"48": "icons/yes_mark.png"
	},

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://www.imdb.com/title/*"],
      "js": ["content.js"]
    }
  ],
  
  "permissions": [
    "tabs",
    "webRequest",
    "http://bechdeltest.com/*"
  ],

  "web_accessible_resources": [
    "icons/x_mark.png",
    "icons/yes_mark.png",
		"icons/question_mark.png"
  ]
}
